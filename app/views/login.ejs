<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/login.css">
</head>
<body class="bg-light d-flex align-items-center" style="height:100vh;">
  <div class="container text-center">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card p-4 shadow-sm">
          <h2 class="mb-3">Panel Personal</h2>
          <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <form method="POST" action="/login" id="loginForm">
            <input type="hidden" name="user" id="userField">
            <div id="passwordGroup" class="mb-3 d-none">
              <input type="password" name="password" class="form-control" placeholder="ContraseÃ±a">
            </div>
            <div class="d-grid gap-2">
              <button type="button" class="btn btn-secondary" onclick="loginAsGuest()">Ingresar como Invitado</button>
              <button type="button" class="btn btn-primary" onclick="showAdminPassword()">Ingresar como gabriel</button>
              <button type="submit" id="submitBtn" class="btn btn-success d-none">Entrar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="/static/js/login.js"></script>
</body>
</html>
